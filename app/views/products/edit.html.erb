<%=form_tag "/products/ #{@product.id}" ,method: :patch do %>

<div>
  <%= label_tag :name, "Write your product here" %>
  <%=text_area_tag :name, @product.name %>
</div>

<div>
  <%= label_tag :price, "Write the price here" %>
  <%= text_area_tag :price, @product.price%>
</div>

<div>
  <%= label_tag :image, "Enter an image here" %>
  <%= text_area_tag :image, @product.image%>
</div>

<div>
  <%= label_tag :description, "Write the description of the product" %>
  <%= text_area_tag :description, @product.description%>
</div>

<div>
  <%= submit_tag "Submit" %>
</div>

<% end %>